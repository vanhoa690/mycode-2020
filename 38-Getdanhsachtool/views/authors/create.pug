extends ../layouts/common
block content
  h1 Create Author
    if errors
      each error in errors
        .alert.alert-danger= error
    form(action="/authors/create", method="POST")
      .form-group
        label(for="name") Author Name
        input#name.form-control(name="name", type="text")
      .form-group
        label(for="about") About Author
        textarea#about(name="about")
      button.btn.btn-primary Add Author
      .form-group
        label(for="title") Title SEO
        input#title.form-control(name="title", type="text")
      .form-group
        label(for="desc") Desc SEO
        textarea#desc(name="desc")